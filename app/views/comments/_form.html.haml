- form_for @comment, :url => post_comments_path(@post.permalink), :html => { :id => 'comment_input' } do |form|

  .comment_metadata
    %span.input
      = form.label :author, "Naam*"
      = form.text_field :author

    %span.input
      = form.label :email, "E-mailadres*"
      = form.text_field :email

    %span.input
      = form.label :url, "Website"
      = form.text_field :url

    %span.input
      = form.label :spam, "Vuur is ...*"
      = form.text_field :spam

    %span.text
      = form.label :content, "Bericht <span>Verplicht</span>".html_safe
      = form.text_area :content, { "rows" => 9, "cols" => 29 }

    = form.submit "Toevoegen", :class => "button"